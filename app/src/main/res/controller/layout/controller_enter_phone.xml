<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/screen_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingStart="@dimen/padding_horizontal">

            <TextView
                android:id="@+id/tvEnterPhoneNumber"
                style="@style/MnassaHeader2"
                android:layout_below="@id/header"
                tools:text="Enter your phone number to receive validation code" />

            <include
                android:id="@+id/phoneInput"
                layout="@layout/phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEnterPhoneNumber"
                android:layout_marginTop="@dimen/spacing_vertical" />

            <include
                android:id="@+id/coneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneInput"
                android:layout_marginTop="@dimen/spacing_vertical"
                android:visibility="gone"
                tools:visibility="visible"
                layout="@layout/code_input"/>

            <Button
                android:id="@+id/btnVerifyMe"
                style="@style/MnassaOutlineButton"
                android:layout_below="@id/coneInput"
                android:layout_marginTop="@dimen/spacing_vertical"
                tools:text="Verify me" />

            <TextView
                android:id="@+id/tvTermsAndConditions"
                style="@style/MnassaTextTiny"
                android:layout_below="@id/btnVerifyMe"
                android:layout_marginTop="@dimen/spacing_vertical"
                android:gravity="center"
                tools:text="Tapping Verify you agree with Terms &amp; Conditions" />

            <include
                android:id="@+id/orLayout"
                layout="@layout/or_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTermsAndConditions"
                android:layout_marginTop="@dimen/spacing_vertical" />

            <Button
                android:id="@+id/btnEnterPromo"
                style="@style/MnassaTransparentButton"
                android:layout_below="@id/orLayout"
                android:layout_marginTop="@dimen/spacing_vertical"
                tools:text="Enter promo code" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>