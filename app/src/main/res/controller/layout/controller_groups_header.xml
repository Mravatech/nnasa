<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llGroupsHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mnassa.widget.MnassaTextView
        android:id="@+id/tvGroupInvites"
        style="@style/MnassaHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:layout_marginStart="@dimen/spacing_horizontal"
        android:layout_marginTop="@dimen/spacing_vertical"
        app:textDictionary="@string/groups_requests"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNewConnectionRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:visibility="gone"
        tools:layout_height="150dp"
        tools:listitem="@layout/item_connection_request"
        tools:visibility="visible" />

    <View
        android:id="@+id/vGroupInvites"
        style="@style/MnassaShadow"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>