<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mnassa.widget.MnassaToolbar
        android:id="@+id/tlbrSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_title="@string/settings_title" />

    <LinearLayout
        android:id="@+id/llPushSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_size"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_notifications" />

        <TextView
            android:id="@+id/tvPushNotifications"
            style="@style/Settings.Info"
            android:layout_margin="@dimen/activity_margin_size"
            android:textColor="@color/black_transparent_90"
            tools:text="Push-notifications" />

    </LinearLayout>

    <View
        style="@style/MnassaDivider"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:id="@+id/llLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_size"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_language" />

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_margin="@dimen/activity_margin_size"
            android:textColor="@color/black_transparent_90"
            style="@style/Settings.Info"
            tools:text="Language (En)" />

    </LinearLayout>
</LinearLayout>