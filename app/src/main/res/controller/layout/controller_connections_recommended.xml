<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mnassa.widget.MnassaToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlEmptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEmpty"
                style="@style/EmptyList.Icon"
                app:srcCompat="@drawable/ic_connections" />

            <com.mnassa.widget.MnassaTextView
                android:id="@+id/tvEmptyTitle"
                style="@style/EmptyList.Title"
                android:layout_below="@id/ivEmpty"
                app:textDictionary="@string/connections_recommended_empty_title" />

            <com.mnassa.widget.MnassaTextView
                android:id="@+id/tvEmptyDescription"
                style="@style/EmptyList.Description"
                android:layout_below="@id/tvEmptyTitle"
                app:textDictionary="@string/connections_recommended_empty_description" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendedConnections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_connection_recommended_line" />
    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/clSnackbarParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>