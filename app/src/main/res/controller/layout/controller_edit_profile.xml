<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.mnassa.widget.MnassaToolbar
        android:id="@+id/toolbarEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@drawable/shadow" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="196dp">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:layout_below="@id/tvTitle"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@null"
                    app:srcCompat="@mipmap/ic_launcher" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabInfoAddPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivUserAvatar"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="-28dp"
                    android:layout_marginEnd="16dp"
                    app:fabSize="normal"
                    app:srcCompat="@drawable/ic_camera" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvEditProfileMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="#9fa9b5"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginBottom="16dp"
                tools:text="Main Information" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilProfileFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etProfileFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilProfileLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etProfileLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilProfileUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etProfileUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <com.mnassa.widget.ChipLayout
                    android:id="@+id/clOffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.mnassa.widget.ChipLayout
                    android:id="@+id/clInterests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>