<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonFirstName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonFirstName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonSecondName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonSecondName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonUserName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonUserName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonCity"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonCity"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <com.mnassa.widget.ChipLayout
            android:id="@+id/chipOffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonInterests"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonInterests"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</ScrollView>