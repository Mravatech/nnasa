<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/spacing_vertical"
    android:paddingStart="@dimen/padding_horizontal"
    android:paddingBottom="@dimen/padding_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundHighlight"
        android:orientation="vertical"
        android:padding="@dimen/padding_horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonFirstName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonFirstName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonSecondName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonSecondName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonUserName"
            style="@style/Registration.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPersonUserName"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPersonCity"
            style="@style/Registration.TextInputLayout">

            <AutoCompleteTextView
                android:id="@+id/actvPersonCity"
                style="@style/Registration.EditText" />
        </android.support.design.widget.TextInputLayout>

        <com.mnassa.widget.ChipLayout
            android:id="@+id/chipPersonOffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.mnassa.widget.ChipLayout
            android:id="@+id/chipPersonInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>
