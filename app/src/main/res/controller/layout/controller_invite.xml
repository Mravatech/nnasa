<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/registrationProgress"
        style="@style/ScreenHeaderProgress"
        android:progress="85" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/padding_horizontal"
        android:paddingStart="@dimen/padding_horizontal">

        <include
            android:id="@+id/header"
            layout="@layout/screen_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvInviteUsersToBuildNetwork"
            style="@style/MnassaHeader2"
            android:layout_below="@id/header"
            android:layout_marginTop="@dimen/spacing_vertical"
            tools:text="Invite users to build your Network (0)" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvInvite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvInviteUsersToBuildNetwork"
            android:layout_marginTop="@dimen/spacing_vertical"
            tools:listitem="@layout/item_invite_account" />


    </RelativeLayout>


</LinearLayout>
