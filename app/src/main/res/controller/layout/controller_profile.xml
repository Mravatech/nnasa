<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/profileCollapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:expandedTitleTextAppearance="@color/white"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/flProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCropImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_main_image_height"
                        android:contentDescription="@null"
                        android:foreground="@drawable/avatar_shadow"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@drawable/ic_empty_avatar_placeholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ivCropImage"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/spacing_vertical"
                        android:paddingEnd="@dimen/spacing_horizontal"
                        android:paddingStart="@dimen/spacing_horizontal">

                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/profile_toolbar_title_expanded_text_size"
                            tools:text="Calvin Chambers" />

                        <TextView
                            android:id="@+id/profileSubName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/gray_pale"
                            android:textSize="@dimen/profile_toolbar_title_expanded_sub_text_size"
                            tools:text="UI/UX Designer in ISDDESIGN" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/flSecondHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/profile_main_image_height"
                        tools:background="@color/accent"
                        tools:layout_height="100dp" />


                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarProfile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:expandedTitleTextAppearance="@android:color/black"
                app:layout_collapseMode="parallax"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/flContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:id="@+id/ivProfileEdit"
                            style="@style/Profile.ToolbarMenuView"
                            android:layout_marginEnd="@dimen/profile_toolbar_child_margin"
                            android:contentDescription="@null"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_edit" />

                        <ImageView
                            android:id="@+id/ivProfileMenu"
                            style="@style/Profile.ToolbarMenuView"
                            android:layout_marginEnd="@dimen/profile_toolbar_child_margin"
                            android:contentDescription="@null"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_menu" />

                    </FrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_anchor="@id/ivCropImage"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_chat"
        tools:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/rlConnectContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            style="@style/MnassaShadow"
            android:rotation="180" />

        <RelativeLayout
            android:id="@+id/btnConnectUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivConnect"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/spacing_horizontal"
                android:layout_marginStart="@dimen/spacing_horizontal"
                app:srcCompat="@drawable/ic_new_requests" />

            <com.mnassa.widget.MnassaTextView
                style="@style/MnassaHeader3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_horizontal"
                android:layout_marginStart="@dimen/spacing_horizontal"
                android:layout_toEndOf="@id/ivConnect"
                android:text="@string/profile_connect_button"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>