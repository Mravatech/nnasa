<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PersonalInfo.ScrollContainer"
    android:orientation="vertical">

    <LinearLayout
        style="@style/PersonalInfo.LinearContainer"
        android:layout_marginEnd="@dimen/personal_info_horizontal_main_margin"
        android:layout_marginStart="@dimen/personal_info_horizontal_main_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHeader"
                style="@style/PersonalInfo.HeaderTitle" />

            <Button
                android:id="@+id/btnHeaderNext"
                style="@style/PersonalInfo.HeaderNext" />
        </LinearLayout>

        <include layout="@layout/sub_profile_avatar" />

        <include layout="@layout/sub_personal_info" />

        <TextView
            android:id="@+id/tvSkipThisStep"
            style="@style/PersonalInfo.TextViewSkipThisStep" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>