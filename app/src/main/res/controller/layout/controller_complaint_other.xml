<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mnassa.widget.MnassaToolbar
        android:id="@+id/tlbrComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toolbar_title="@string/complaint_other_title"/>

    <TextView
        android:id="@+id/tvInfoComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="Please describe your reason" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilComplaintMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        app:counterMaxLength="300">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etComplaintMessage"
            android:layout_width="match_parent"
            android:maxLength="300"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>