<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pbRegistration"
        style="@style/ScreenHeaderProgress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_horizontal"
            android:paddingStart="@dimen/padding_horizontal">

            <include
                android:id="@+id/header"
                layout="@layout/header_login" />

            <TextView
                android:id="@+id/tvEnterValidationCode"
                style="@style/MnassaHeader2"
                android:layout_below="@id/header"
                tools:text="Enter a validation code below" />

            <include
                android:id="@+id/codeInput"
                layout="@layout/code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEnterValidationCode"
                android:layout_marginTop="@dimen/vertical_margin_login" />

            <Button
                android:id="@+id/tvResendCodeAfter"
                style="@style/MnassaTransparentButton"
                android:layout_below="@id/codeInput"
                android:layout_marginTop="@dimen/vertical_margin_login"
                tools:text="Resend Code after 24â€¦" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
