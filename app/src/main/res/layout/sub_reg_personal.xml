<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_highlighted"
    android:orientation="vertical"
    android:padding="@dimen/padding_horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPersonFirstName"
        style="@style/Registration.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPersonFirstName"
            style="@style/Registration.EditText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPersonSecondName"
        style="@style/Registration.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPersonSecondName"
            style="@style/Registration.EditText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPersonUserName"
        style="@style/Registration.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPersonUserName"
            style="@style/Registration.EditText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPersonCity"
        style="@style/Registration.TextInputLayout"
        app:errorEnabled="true">

        <AutoCompleteTextView
            android:id="@+id/actvPersonCity"
            style="@style/Registration.EditText" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.mnassa.widget.ChipLayout
        android:id="@+id/chipPersonOffers"
        style="@style/Registration.ChipLayout" />

    <com.mnassa.widget.ChipLayout
        android:id="@+id/chipPersonInterests"
        style="@style/Registration.ChipLayout"
        android:layout_marginTop="@dimen/chip_layout_interests_margin_top" />
</LinearLayout>