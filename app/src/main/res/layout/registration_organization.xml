<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyName"
                style="@style/Registration.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyName"
                    style="@style/Registration.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyUserName"
                style="@style/Registration.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyUserName"
                    style="@style/Registration.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyCity"
                style="@style/Registration.TextInputLayout">

                <AutoCompleteTextView
                    android:id="@+id/actvCompanyCity"
                    style="@style/Registration.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyOffers"
                style="@style/Registration.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyOffers"
                    style="@style/Registration.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCompanyInterests"
                style="@style/Registration.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCompanyInterests"
                    style="@style/Registration.EditText" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>