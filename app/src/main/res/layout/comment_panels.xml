<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPanels"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/commentPanel"
    android:orientation="vertical">

    <include
        android:id="@+id/editPanel"
        layout="@layout/panel_comment_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/replyPanel"
        layout="@layout/panel_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/recommendPanel"
        layout="@layout/panel_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>
