<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonWrapper">

        <ImageView
            android:id="@+id/ivCropImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:contentDescription="@null" />

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fabAddPhoto"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="50dp" />-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/fabAddPhoto"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Add your profile Photo" />-->
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/buttonWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCrop"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTakePhotoFromCamera"
            style="@style/MnassaButton"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Take Photo" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTakePhotoFromGallery"
            style="@style/MnassaButton"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Take Photo From Camera" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnCrop"
        style="@style/MnassaButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        tools:text="Crop Photo" />
</RelativeLayout>