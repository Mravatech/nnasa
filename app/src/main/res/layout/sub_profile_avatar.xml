<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PersonalInfo.ImageContainer">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivUserAvatar"
        style="@style/PersonalInfo.Image"
        android:layout_below="@id/tvTitle"
        android:background="@color/white"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_empty_avatar_placeholder" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabInfoAddPhoto"
        style="@style/PersonalInfo.FabAddPhoto"
        android:layout_alignBottom="@+id/ivUserAvatar"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/personal_info_fab_margin_bottom"
        android:layout_marginEnd="@dimen/personal_info_fab_margin_end"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_camera" />
</RelativeLayout>