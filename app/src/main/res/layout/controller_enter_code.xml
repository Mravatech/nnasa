<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEnterValidationCode"
            style="@style/MnassaHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Enter a validation code below" />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/tvEnterValidationCode"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilValidationCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etValidationCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="@integer/validation_code_length"
                    tools:text="123456" />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvResendCodeAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center|bottom"
            android:textColor="@color/coolGray"
            android:textSize="14sp"
            tools:text="Resend Code after 24â€¦" />

    </RelativeLayout>
</ScrollView>