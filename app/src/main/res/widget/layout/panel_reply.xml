<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/spacing_horizontal"
    android:paddingStart="@dimen/spacing_horizontal">

    <TextView
        android:id="@+id/tvReplyTo"
        style="@style/MnassaText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        tools:text="Replying to " />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivReplyCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/spacing_horizontal"
        android:paddingEnd="@dimen/spacing_horizontal"
        android:paddingStart="@dimen/spacing_horizontal"
        android:paddingTop="@dimen/spacing_horizontal"
        app:srcCompat="@drawable/ic_close_black_24dp" />

</LinearLayout>