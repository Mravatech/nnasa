<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundHighlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/spacing_horizontal"
        android:paddingStart="@dimen/spacing_horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivEditCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/spacing_horizontal"
            android:paddingEnd="@dimen/spacing_horizontal"
            android:paddingStart="@dimen/spacing_horizontal"
            android:paddingTop="@dimen/spacing_horizontal"
            app:srcCompat="@drawable/ic_close_black_24dp" />

        <View
            style="@style/MnassaDividerVertical"
            android:layout_marginBottom="@dimen/spacing_vertical"
            android:layout_marginTop="@dimen/spacing_vertical"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEditTitle"
                style="@style/MnassaTextTiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Edit comment" />

            <TextView
                android:id="@+id/tvEditText"
                style="@style/MnassaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Edit comment text" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/MnassaDivider"
        android:layout_gravity="bottom" />

</FrameLayout>