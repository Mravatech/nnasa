<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerSelectable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mnassa.widget.input.AbilitySelectableEditText
        android:id="@+id/selectOccupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAddAnotherOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/personal_info_inner_margin_start"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/blue_turquoise"
        android:textSize="@dimen/personal_info_add_ability_text_size"
        android:textStyle="normal"
        android:visibility="gone" />
</LinearLayout>