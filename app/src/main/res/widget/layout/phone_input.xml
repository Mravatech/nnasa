<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/background_highlighted"
        android:gravity="center_vertical"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="@dimen/padding_horizontal"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingTop="4dp"
        tools:background="#fac6c6">

        <Spinner
            android:id="@+id/spinnerPhoneCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:spinnerMode="dialog"
            tools:listitem="@layout/item_country_code_drop_down" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_horizontal"
            android:layout_marginStart="@dimen/spacing_horizontal"
            android:background="@color/divider" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhoneNumberTail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="text|textNoSuggestions"
            android:textSize="22sp"
            tools:hint="Your number" />

    </LinearLayout>
</FrameLayout>
