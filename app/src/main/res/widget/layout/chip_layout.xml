<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/chip_layout_margin_horizontal"
    android:layout_marginStart="@dimen/chip_layout_margin_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvChipHeader"
        style="@style/ChipTextHeader" />

    <com.mnassa.widget.FlowLayout
        android:id="@+id/flChipContainer"
        style="@style/ChipTextHeader">
        <EditText
            android:id="@+id/etChipInput"
            style="@style/ChipEditText"
            android:layout_marginBottom="@dimen/chip_et_margin_vertical"
            android:layout_marginTop="@dimen/chip_et_margin_vertical"
            android:hint="" />
    </com.mnassa.widget.FlowLayout>

    <View style="@style/ChipDivider" />

</LinearLayout>