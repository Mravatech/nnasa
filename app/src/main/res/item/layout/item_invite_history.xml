<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Invite.ItemViewContainer"
    android:layout_margin="@dimen/invite_item_view_main_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPhoneContactAvatar"
        style="@style/Invite.ItemViewImage"
        android:contentDescription="@null"
        tools:background="@mipmap/ic_launcher" />

    <LinearLayout
        style="@style/Invite.ItemViewContainer"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/invite_item_view_main_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInviteContactName"
            style="@style/Invite.ItemViewContactName"
            tools:text="Mae Owens" />

        <TextView
            android:id="@+id/tvInviteContactNumber"
            style="@style/Invite.ItemViewContactNumber"
            tools:text="+389483758473" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:textColor="#70cf39"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="REGISTERED" />
    <!--abafb3-->
</LinearLayout>