<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Invite.ItemViewContainer"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvInviteHistoryHeader"
        style="@style/Invite.ItemInviteHistoryRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/invite_item_view_main_margin"
        android:layout_marginStart="@dimen/invite_main_screen_margin"
        android:layout_marginTop="@dimen/invite_dialog_invite_with_horizontal_indent"
        android:textColor="@color/black"
        tools:text="Invited in March 2017" />

    <View
        android:id="@+id/vShadow"
        style="@style/MnassaShadowUpDown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/invite_item_view_main_margin">

        <ImageView
            android:id="@+id/ivPhoneContactAvatar"
            style="@style/Invite.ItemViewImage"
            android:contentDescription="@null"
            tools:background="@mipmap/ic_launcher" />

        <LinearLayout
            style="@style/Invite.ItemViewContainer"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/invite_item_view_main_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInviteContactName"
                style="@style/Invite.ItemViewContactName"
                tools:text="Mae Owens" />

            <TextView
                android:id="@+id/tvInviteContactNumber"
                style="@style/Invite.ItemViewContactNumber"
                tools:text="+389483758473" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRegistration"
            style="@style/Invite.ItemInviteHistoryRegistration"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            tools:text="REGISTERED" />
    </LinearLayout>

    <View
        android:id="@+id/vShadowBottom"
        style="@style/MnassaShadow" />

</LinearLayout>