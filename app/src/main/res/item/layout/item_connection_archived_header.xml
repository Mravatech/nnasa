<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundHighlight">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivDescriptionIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="@dimen/spacing_vertical"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:layout_marginStart="@dimen/spacing_horizontal"
        android:layout_marginTop="@dimen/spacing_vertical"
        app:srcCompat="@drawable/ic_rejected_connections" />

    <TextView
        android:id="@+id/tvDescription"
        style="@style/MnassaTextTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:layout_toEndOf="@id/ivDescriptionIcon"
        tools:text="New requests can be sent ...." />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />

</RelativeLayout>