<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/llCharRoom"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivChatUserIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/empty_ava" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:textColor="#de000000"
            android:textSize="16sp"
            tools:text="Gordon Baker" />

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="It’s the one week of the year in which you get the chance to take…" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessageCame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:lineSpacingExtra="10sp"
            android:textColor="@color/coolGray"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="9 min" />

        <TextView
            android:id="@+id/tvMessageUnread"
            android:layout_width="20dp"
            android:visibility="gone"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/background_round_unread_message_count"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:text="8" />

    </LinearLayout>
</LinearLayout>