<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chat_message_half_base_margin"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rlUserMessagesReplyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/chat_message_half_base_margin"
        android:background="@drawable/outcome_chat_message_background"
        android:orientation="vertical"
        android:padding="@dimen/chat_message_base_padding">

        <TextView
            android:id="@+id/tvUserReplyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvUserMessageWithReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvUserMessageWithReplySent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/chat_message_half_base_margin"
        android:gravity="center_vertical"
        tools:text="12132131" />
</LinearLayout>