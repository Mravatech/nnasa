<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/chat_message_half_base_margin"
    android:gravity="left">

    <LinearLayout
        android:id="@+id/rlUserMessagesReplyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/chat_message_half_base_margin"
        android:layout_toStartOf="@+id/tvUserMessageWithReplySent"
        android:background="@drawable/outcome_chat_message_background"
        android:orientation="vertical"
        android:padding="@dimen/chat_message_base_padding">

        <TextView
            android:id="@+id/tvUserReplyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            tools:text="Reply message" />

        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvUserMessageWithReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            tools:text="Message with long long long long long long long long text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvUserMessageWithReplySent"
        style="@style/ChatMessage.Time"
        android:layout_alignParentEnd="true"
        tools:text="12:00 PM" />
</RelativeLayout>