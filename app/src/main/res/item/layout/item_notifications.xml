<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlNotificationRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_highlighted"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="@dimen/user_icon_in_rv_size"
        android:layout_height="@dimen/user_icon_in_rv_size"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:contentDescription="@null"
        app:srcCompat="@drawable/empty_ava" />

    <TextView
        android:id="@+id/tvUserName"
        style="@style/Notifications.UserName"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/ivUserIcon"
        tools:text="Gordon Baker" />

    <TextView
        android:id="@+id/tvNotificationInfo"
        style="@style/Notifications.Info"
        android:layout_below="@id/tvUserName"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:layout_toEndOf="@id/ivUserIcon"
        tools:text="Recommended you in post." />

    <TextView
        android:id="@+id/tvNotificationCame"
        style="@style/MnassaTextTiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/spacing_vertical"
        android:layout_marginEnd="@dimen/spacing_horizontal"
        android:layout_marginStart="@dimen/spacing_horizontal"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:gravity="end"
        android:textColor="@color/gray_cool"
        android:textSize="14sp"
        tools:text="9 min" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider" />

</RelativeLayout>