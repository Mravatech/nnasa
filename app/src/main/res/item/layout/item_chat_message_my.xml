<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chat_message_half_base_margin"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvMyMessageSent"
        style="@style/ChatMessage.Time"
        tools:text="12:00 PM" />

    <TextView
        android:id="@+id/tvMyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/chat_message_half_base_margin"
        android:autoLink="all"
        android:background="@drawable/income_chat_message_background"
        android:padding="@dimen/chat_message_base_padding"
        android:textColorLink="@color/black"
        tools:text="test message big message test test testtest" />
</LinearLayout>