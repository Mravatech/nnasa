<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tvProfileConnections"
            style="@style/ProfileHeaderItem.TextView"
            android:background="?selectableItemBackground"
            android:layout_weight="1"
            tools:text="999" />

        <TextView
            android:id="@+id/tvPointsGiven"
            style="@style/ProfileHeaderItem.TextView"
            android:background="?selectableItemBackground"
            android:layout_weight="1"
            tools:text="999" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/flMoreInformation"
        android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMoreInformation"
            style="@style/ProfileHeaderItem.TextViewMore"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_down"
            android:drawablePadding="8dp"
            tools:text="MORE INFORMATION" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider" />

    <include layout="@layout/sub_header_personal" />


    <com.mnassa.widget.linearchip.OneLineLinear
        android:id="@+id/llBottomTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_main"
        android:orientation="horizontal"/>

    <View
        android:visibility="gone"
        android:id="@+id/vBottomDivider"
        android:layout_width="match_parent"
        android:background="@color/background_main"
        android:layout_height="24dp"/>

    <RelativeLayout
        android:id="@+id/rlEmptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_vertical"
        android:paddingBottom="@dimen/spacing_vertical"
        android:background="@color/background_main"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivEmpty"
            style="@style/EmptyList.Icon"
            app:tint="@color/gray_cool"
            app:srcCompat="@drawable/ic_mnassa_empty" />

        <com.mnassa.widget.MnassaTextView
            android:id="@+id/tvEmptyTitle"
            style="@style/EmptyList.Title"
            android:layout_below="@id/ivEmpty"
            android:textColor="@color/gray_cool"
            android:text="@string/posts_empty_list_title" />

        <com.mnassa.widget.MnassaTextView
            android:id="@+id/tvEmptyDescription"
            style="@style/EmptyList.Description"
            android:layout_below="@id/tvEmptyTitle"
            android:textColor="@color/gray_cool"
            android:text="@string/posts_empty_list_description" />

    </RelativeLayout>

</LinearLayout>