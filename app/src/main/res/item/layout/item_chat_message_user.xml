<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtNameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/chat_message_half_base_margin"
    android:gravity="left">

    <TextView
        android:id="@+id/tvUserMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/chat_message_half_base_margin"
        android:layout_toStartOf="@+id/tvMyMessageSent"
        android:background="@drawable/outcome_chat_message_background"
        android:padding="@dimen/chat_message_base_padding"
        tools:text="Message with long long long long long long long text" />

    <TextView
        android:id="@+id/tvMyMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tvUserMessage"
        android:layout_marginBottom="@dimen/chat_message_half_base_margin"
        android:maxLines="1"
        android:minWidth="@dimen/chat_message_time_min_width"
        tools:text="text" />
</RelativeLayout>