<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tvProfileConnections"
            style="@style/ProfileHeaderItem.TextView"
            android:layout_weight="1"
            tools:text="999" />

        <TextView
            android:id="@+id/tvPointsGiven"
            style="@style/ProfileHeaderItem.TextView"
            android:layout_weight="1"
            tools:text="999" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/flMoreInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvMoreInformation"
            style="@style/ProfileHeaderItem.TextViewMore"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_down"
            android:drawablePadding="8dp"
            tools:text="MORE INFORMATION" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/profileInfo"
        style="@style/ProfileHeaderItem.MainContainer"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvProfileCanHelpWith"
            style="@style/ProfileHeaderItem.TextViewLabel"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginTop="@dimen/profile_header_item_offers_margin_bottom"
            android:visibility="gone"
            tools:text="I Can help with" />

        <com.mnassa.widget.FlowLayout
            android:id="@+id/chipProfileCanHelpWith"
            style="@style/ProfileHeaderItem.FlowLayout"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <View
            android:id="@+id/vBottomViewCanHelpWith"
            style="@style/ProfileHeaderItem.ViewFaceEditTextBottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvProfileInterestedIn"
            style="@style/ProfileHeaderItem.TextViewLabel"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginTop="@dimen/profile_header_item_interests_margin_top"
            android:visibility="gone"
            tools:text="My Interests" />

        <com.mnassa.widget.FlowLayout
            android:id="@+id/chipProfileInterestWith"
            style="@style/ProfileHeaderItem.FlowLayout"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <View
            android:id="@+id/vBottomViewInterestedIn"
            style="@style/ProfileHeaderItem.ViewFaceEditTextBottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLabelDateOfBirth"
            style="@style/ProfileHeaderItem.TextViewLabel"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginTop="@dimen/profile_header_item_offers_margin_bottom"
            android:visibility="gone"
            tools:text="Date of Birth" />

        <TextView
            android:id="@+id/tvDateOfBirth"
            style="@style/ProfileHeaderItem.TextViewMoreInfo"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:text="01 Februrary 1991 (26 years)" />

        <View
            android:id="@+id/vBottomViewDateOfBirth"
            style="@style/ProfileHeaderItem.ViewFaceEditTextBottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLabelProfilePhone"
            style="@style/ProfileHeaderItem.TextViewLabel"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginTop="@dimen/profile_header_item_offers_margin_bottom"
            android:visibility="gone"
            tools:text="Mobile Phone" />

        <TextView
            android:id="@+id/tvProfilePhone"
            style="@style/ProfileHeaderItem.TextViewMoreInfo"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:textColor="@color/turquoiseBlue"
            android:visibility="gone"
            tools:text="+38 (066) 752 02 65" />

        <View
            android:id="@+id/vBottomViewProfilePhone"
            style="@style/ProfileHeaderItem.ViewFaceEditTextBottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLabelProfileEmail"
            style="@style/ProfileHeaderItem.TextViewLabel"
            android:layout_marginBottom="@dimen/profile_header_item_tags_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginTop="@dimen/profile_header_item_offers_margin_bottom"
            android:visibility="gone"
            tools:text="Email" />

        <TextView
            android:id="@+id/tvProfileEmail"
            style="@style/ProfileHeaderItem.TextViewMoreInfo"
            android:layout_marginBottom="@dimen/profile_header_item_offers_margin_bottom"
            android:layout_marginEnd="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:layout_marginStart="@dimen/profile_header_item_margin_fake_til_horizontal"
            android:textColor="@color/turquoiseBlue"
            android:visibility="gone"
            tools:text="calvin@gmail.com" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>