<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MnassaButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_main</item>
    </style>

    <style name="MnassaOutlineButton">
        <item name="android:background">@drawable/button_outline_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MnassaTransparentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/button_transparent_text_color</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <dimen name="btn_corner_radius">25dp</dimen>
    <color name="control_highlight">#1f000000</color>
    <color name="btn_pressed">@color/cerulean</color>
    <color name="btn_active">@color/colorAccent</color>
    <color name="btn_disabled">#830076ff</color>

</resources>