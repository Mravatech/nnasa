<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatRoom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChatMessage"></style>

    <!--<item name="android:fontFamily">@font/roboto_medium</item>-->

    <style name="ChatRoom.IconItem">
        <item name="android:layout_width">@dimen/chat_room_icon_size</item>
        <item name="android:layout_height">@dimen/chat_room_icon_size</item>
    </style>

    <style name="ChatRoom.UserNameItem">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chat_room_user_name_size</item>
        <item name="android:textColor">@color/blackDarkAlpha</item>
    </style>

    <style name="ChatRoom.LastMessageItem">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chat_room_message_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/chat_room_message_line_space</item>
    </style>

    <style name="ChatRoom.TimeAgoItem">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chat_room_message_size</item>
        <item name="android:textColor">@color/coolGray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="ChatRoom.UnreadCountItem">
        <item name="android:layout_width">@dimen/chat_room_unread_count_size</item>
        <item name="android:layout_height">@dimen/chat_room_unread_count_size</item>
        <item name="android:textSize">@dimen/chat_room_message_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_round_unread_message_count</item>
    </style>

    <style name="ChatRoom.NoContentText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/coolGray</item>
        <item name="android:textSize">@dimen/chat_room_no_content_text_size</item>
    </style>

    <style name="ChatMessage.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/backgroundTransparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/coolGray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/chat_message_et_sent_text_size</item>
    </style>

    <style name="ChatMessage.SendTextView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/chat_message_attach_size</item>
        <item name="android:paddingStart">@dimen/chat_message_attach_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/coolGray</item>
        <item name="android:textSize">@dimen/chat_message_et_sent_text_size</item>
    </style>

    <style name="ChatDialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/chat_message_base_padding</item>
    </style>

    <dimen name="chat_room_icon_size">40dp</dimen>
    <dimen name="chat_room_unread_count_size">20dp</dimen>
    <dimen name="chat_room_unread_count_margin_top">4dp</dimen>
    <dimen name="chat_room_no_content_text_size">16sp</dimen>
    <dimen name="chat_room_user_name_size">16sp</dimen>
    <dimen name="chat_room_message_line_space">6sp</dimen>
    <dimen name="chat_room_message_size">14sp</dimen>
    <dimen name="chat_room_base_margin">16dp</dimen>
    <dimen name="chat_room_margin_time_ago_start">8dp</dimen>

    <dimen name="chat_message_base_margin">16dp</dimen>
    <dimen name="chat_message_half_base_margin">8dp</dimen>
    <dimen name="chat_message_base_padding">16dp</dimen>
    <dimen name="chat_message_half_base_padding">8dp</dimen>
    <dimen name="chat_message_send_container_height">58dp</dimen>
    <dimen name="chat_message_attach_size">20dp</dimen>
    <dimen name="chat_message_et_sent_text_size">16sp</dimen>
    <dimen name="chat_message_date_text_margin">12dp</dimen>

</resources>