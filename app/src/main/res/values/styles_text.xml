<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MnassaHeader1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MnassaHeader2" parent="MnassaHeader1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MnassaText" parent="MnassaHeader2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MnassaTextTiny" parent="MnassaText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/coolGray</item>
    </style>

    <style name="Connections"/>
    <style name="Connections.Recommended"/>

    <style name="Connections.Recommended.UserName" parent="MnassaText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>
    <style name="Connections.Recommended.UserPosition" parent="MnassaTextTiny">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>


</resources>