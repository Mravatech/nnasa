<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipEditText" parent="ChipCommon">
        <item name="android:background">@color/transparent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:minWidth">@dimen/et_chip_min_width</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ChipTextHeader" parent="ChipCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">@dimen/tv_header_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ChipFlowLayout" parent="ChipCommon">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ChipBottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_line_height</item>
        <item name="android:background">@color/chip_edit_text_hint</item>
    </style>

    <style name="ChipItemView" parent="ChipCommon">
        <item name="android:gravity">center</item>
    </style>

    <style name="ChipTextView" parent="ChipCommon">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/et_chip_inner_item_padding</item>
        <item name="android:drawablePadding">@dimen/et_chip_inner_item_drawable_padding</item>
    </style>

    <style name="ChipRemoveImageButton" parent="ChipCommon">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingBottom">@dimen/et_chip_inner_item_padding</item>
        <item name="android:paddingEnd">@dimen/et_chip_inner_item_padding</item>
        <item name="android:paddingTop">@dimen/et_chip_inner_item_padding</item>
    </style>

    <dimen name="count_chip_view_inner_margin">10dp</dimen>
    <dimen name="count_chip_view_margin">4dp</dimen>
    <dimen name="bottom_line_height">1dp</dimen>
    <dimen name="et_chip_min_width">100dp</dimen>
    <dimen name="et_chip_inner_item_padding">8dp</dimen>
    <dimen name="et_chip_inner_item_drawable_padding">4dp</dimen>
    <dimen name="chip_inner_item_padding">3dp</dimen>
    <dimen name="chip_inner_item_padding_vertical">1dp</dimen>
    <dimen name="tv_header_text_size">16sp</dimen>

</resources>