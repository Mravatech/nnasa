<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChipCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChipEditText" parent="ChipCommon">
        <item name="android:background">@color/backgroundTransparent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:minWidth">@dimen/et_chip_min_width</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ChipTextHeader" parent="ChipCommon">
    </style>

    <style name="ChipFlowLayout" parent="ChipCommon">
    </style>

    <style name="ChipDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ChipItemView" parent="ChipCommon">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChipTextView" parent="ChipCommon">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/et_chip_inner_item_padding</item>
    </style>

    <style name="ChipRemoveImageButton" parent="ChipCommon">
        <item name="android:background">@color/backgroundTransparent</item>
        <item name="android:paddingBottom">@dimen/et_chip_inner_item_padding</item>
        <item name="android:paddingEnd">@dimen/et_chip_inner_item_padding</item>
        <item name="android:paddingTop">@dimen/et_chip_inner_item_padding</item>
    </style>

    <dimen name="divider_height">1dp</dimen>
    <dimen name="et_chip_min_width">100dp</dimen>
    <dimen name="et_chip_inner_item_padding">8dp</dimen>

</resources>