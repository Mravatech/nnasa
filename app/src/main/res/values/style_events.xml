<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Event"/>
    <style name="Event.Info"/>
    <style name="Event.Info.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/padding_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_vertical</item>
        <item name="android:layout_marginBottom">@dimen/spacing_vertical</item>
    </style>
    <style name="Event.Info.ItemIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <style name="Event.Info.ItemDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_horizontal</item>
    </style>

</resources>